@using RealEstate.EntityLayer.Concrete
@model List<Personal>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="main-panel" style="width:100%;height:100%">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
            </div>
        <div class="row">
            <div class="col-lg-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Emlak Dağılımı</h4>
                        <canvas id="pieChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-title">TOPLAM SATIŞ</p>
                        <h1>$100.000</h1>
                        <h4>Yıllar içindeki brüt satışlar</h4>
                        <div id="total-sales-chart-legend"></div>
                    </div>
                    <canvas id="total-sales-chart"></canvas>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 stretch-card">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Striped Table</h4>
                            <p class="card-description">
                                Add class <code>.table-striped</code>
                            </p>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                Kullanıcı
                                            </th>
                                            <th>
                                                AD
                                            </th>
                                            <th>
                                                Başarı
                                            </th>
                                            <th>
                                                Günlük Kazanç
                                            </th>
                                            <th>
                                                İşe Başlama Tarihi
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var x in Model){
                                        <tr>
                                            <td class="py-1">
                                                <img src="@x.image" alt="image" @x.ID />
                                            </td>
                                            <td>
                                               @x.name @x.surname
                                            </td>
                                            <td>
                                                <div class="progress">
                                                    <div class="progress-bar bg-success" role="progressbar" style="width: @x.Progress%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </td>
                                            <td>
                                               @x.Amount
                                            </td>
                                            <td>
                                                @x.Dates
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    </div>

    <!-- content-wrapper ends -->
    <!-- partial:partials/_footer.html -->
    <!-- partial -->
</div>

